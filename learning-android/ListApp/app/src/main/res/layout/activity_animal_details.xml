<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnimalDetails">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:contentDescription="@string/picture_content_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/animal_image" android:layout_weight=".5"/>
        <TextView
                android:text="@string/animal_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/animal_type" android:layout_weight="1"
                android:gravity="center" android:textSize="30sp"/>
        <TextView
                android:text="@string/animal_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/animal_desc" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>