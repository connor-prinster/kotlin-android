        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:gravity="center|center_vertical" android:id="@+id/ttTable" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/button1"
                    android:onClick="buttonClick"/>
            <Button
                    android:layout_width="122dp"
                    android:layout_height="120dp"
                    android:id="@+id/button2"
                    android:onClick="buttonClick"/>
