<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:context="com.prinster.calculator.MainActivity" android:weightSum="2">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:inputType="numberSigned|textPersonName|text|numberDecimal|textEmailAddress"
            android:ems="10"
            android:id="@+id/inputText" android:layout_weight="0"/>
    <TableLayout

            android:layout_width="match_parent"
            android:layout_height="283dp" android:layout_weight="1">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="@string/ac"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content" android:id="@+id/ac" android:layout_weight="0"
                    android:background="@color/methods" android:padding="40dp" />
            <Button
                    android:text="@string/posNeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/posNeg" android:layout_weight="0"
                    android:background="@color/methods" android:padding="40dp" />
            <Button
                    android:text="@string/mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/mod" android:layout_weight="1"
                    android:background="@color/methods" android:padding="40dp" />
            <Button
                    android:text="@string/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/div" android:layout_weight="1"
                    android:background="@color/methods" android:padding="40dp" />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/seven" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/eight" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nine" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/mulitply" android:layout_weight="1"
                    android:background="@color/methods" android:padding="40dp" />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/four" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/five" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/six" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/minus" android:layout_weight="1"
                    android:background="@color/methods" android:padding="40dp" />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/one" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/two" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/three" android:layout_weight="1"
                    android:background="@color/numbers" android:padding="40dp" />
            <Button
                    android:text="@string/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/plus" android:layout_weight="1"
                    android:background="@color/methods" android:padding="40dp" />
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:text="@string/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/zero"
                android:background="@color/numbers" android:padding="40dp" android:layout_weight=".50"
        />
        <Button
                android:text="@string/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dot"
                android:background="@color/methods" android:padding="40dp" android:layout_weight=".25"
        />
        <Button
                android:text="@string/equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/equals"
                android:background="@color/methods" android:padding="40dp" android:layout_weight=".8"
        />
    </LinearLayout>

</LinearLayout>
